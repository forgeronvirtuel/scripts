#!/bin/bash

# Environment definition
export SCRIPTS_PATH="/opt/scripts"

# Add local binaries to PATH
export PATH="$PATH:$HOME/.local/bin"

# Add neovim binary
export PATH="$PATH:$HOME/.local/tools/nvim-linux64/bin/"

# Add my script as executable
export PATH="$PATH:${SCRIPTS_PATH}/bin"

# Add neovim (> v0.9)
export PATH="/home/ubuntu/.local/bin/nvim-linux64/bin:$PATH"

# Easy goto
alias goto_palpatia="cd /opt/palpatia"
alias goto_scripts="cd $SCRIPTS_PATH"